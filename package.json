{
  "devDependencies": {
    "husky": "^7.0.2",
    "lint-staged": "^11.2.0"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "bash -c 'pylint **/*.py'",
    "format": "black .",
    "py-install": "python -m venv venv && source venv/Scripts/activate && pip install -r requirements.txt"
  },
  "lint-staged": {
    "*.py": [
      "black",
      "pylint"
    ]
  }
}
